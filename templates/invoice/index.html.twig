{% extends 'base.html.twig' %}

{% block title %}Hello InvoiceController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Product</th>
            <th>Prijs</th>
            <th>Aantal</th>
            <th>Betaal datum</th>
        </tr>
        </thead>
        <tbody>
        {% for item in row %}
            <td>{{ item.p }}</td>
            <td>&euro;{{ item.p.price }}</td>
            <td>Aantal {{ item.rows }}</td>
        {% endfor %}
        {% for item in invoice %}
                <td>{{  item.date ? item.date|date('m-d-Y') : '' }}</td>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
